# Course class
class Course:
    def __init__(self, code, name):
        self.code = code
        self.name = name

    def display(self):
        print(f"{self.code} - {self.name}")


# Student class (Association with Course)
class Student:
    def __init__(self, student_id, name):
        self.student_id = student_id
        self.name = name
        self.courses = []   # Association

    def add_course(self, course):
        self.courses.append(course)

    def display_courses(self):
        print(f"Courses registered by {self.name}:")
        for course in self.courses:
            course.display()


# Department class (Association with Student and Course)
class Department:
    def __init__(self, name):
        self.name = name
        self.students = []
        self.courses = []

    def add_student(self, student):
        self.students.append(student)

    def add_course(self, course):
        self.courses.append(course)


# Registrar class (Dependency)
class Registrar:
    def register_student(self, student, course):
        student.add_course(course)
        print(f"{student.name} successfully registered for {course.name}")


# Main application
def main():
    # Create department
    cs_department = Department("Computer Science")

    # Create courses
    course1 = Course("CS101", "Introduction to Programming")
    course2 = Course("CS102", "Data Structures")

    cs_department.add_course(course1)
    cs_department.add_course(course2)

    # Create student
    student1 = Student("S001", "Queen Emma")
    cs_department.add_student(student1)

    # Registrar performs registration (Dependency)
    registrar = Registrar()
    registrar.register_student(student1, course1)
    registrar.register_student(student1, course2)

    print()
    student1.display_courses()


if __name__ == "__main__":
    main()
