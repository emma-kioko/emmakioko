#include <iostream>
#include <string>
using namespace std;

class Employee {
private:
    string name;
    int age;
    int serviceYear;
    double salary;

public:
    // Parameterized constructor
    Employee(string n, int a, int sY, double sal) {
        name = n;
        age = a;
        serviceYear = sY;
        salary = sal;
    }

    // Destructor
    ~Employee() {
        // Destructor body (can be empty if no dynamic memory is used)
    }

    // Accessor (getter) functions
    string getName() {
        return name;
    }

    int getAge() {
        return age;
    }

    int getServiceYear() {
        return serviceYear;
    }

    double getSalary() {
        return salary;
    }
};

// Example usage
int main() {
    Employee emp("Queen Emma", 25, 3, 75000.0);

    cout << "Name: " << emp.getName() << endl;
    cout << "Age: " << emp.getAge() << endl;
    cout << "Service Years: " << emp.getServiceYear() << endl;
    cout << "Salary: " << emp.getSalary() << endl;

    return 0;
}
